<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Medium.ttf</item>
    </style>
    <!--Custom bold text appearance-->
    <style name="CustomTextAppearance.Bold" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Custom light text appearance-->
    <style name="CustomTextAppearance.Light" parent="CustomTextAppearance">
        <item name="fontPath">fonts/Dosis-Light.ttf</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector_primary_color</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/etMargin</item>
        <item name="android:layout_marginRight">@dimen/etMargin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/ts_medium</item>
        <!--<item name="android:fontFamily" tools:targetApi="jelly_bean">AvenirNext-Medium</item>-->
        <!--<item name="android:textAllCaps">false</item>-->

    </style>
    <style name="buttonWithoutm">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/ts_medium</item>
        <!--<item name="android:fontFamily" tools:targetApi="jelly_bean">AvenirNext-Medium</item>-->
        <!--<item name="android:textAllCaps">false</item>-->

    </style>
    <style name="Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/background</item>

    </style>
    <style name="wrapcontent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/etMargin</item>
        <item name="android:layout_marginRight">@dimen/etMargin</item>

        <item name="android:textColor">#000</item>
        <item name="android:drawablePadding">@dimen/defaultDrawablePadding</item>

    </style>

    <style name="drawerItem">
        <item name="android:layout_marginTop">@dimen/drawermargin</item>
        <item name="android:layout_marginBottom">@dimen/drawermargin</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/ts_medium</item>
        <item name="android:drawablePadding">@dimen/drawermargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/drawermargin</item>

    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">

        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>
    <style name="tvblue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/ts_medium</item>
    </style>

    <style name="tvDisplay">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center</item>
    </style>



</resources>
